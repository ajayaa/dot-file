alias list-machines="aws ec2 describe-instances --filters \"Name=key-name,Values=foo\" \"Name=instance-state-name, Values=running\""
alias security-groups="aws ec2 describe-security-groups | less"
alias delete-machine="aws ec2 terminate-instances --instance-id $@"
alias create-machine=" aws ec2 run-instances --image-id ami-62be8b0c $@"

alias less="less -r $@"
